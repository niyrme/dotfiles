root = true

# Default
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Haskell
[*.hs]
indent_style = space

# Nix
[*.nix]
indent_style = space

# reStructuredText
[*.rst]
indent_style = space

# YAML
[*.{yml,yaml}]
indent_style = space

# Zig
[*.zig]
indent_style = space
